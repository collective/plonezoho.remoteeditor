<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="plonezoho.remoteeditor">

    <configlet
        title="Zoho Remote Editor Settings"
        action_id="plonezoho.remoteeditor.settings"
        appId="plonezoho.remoteeditor"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@zoho-remoteeditor-controlpanel"
        icon_expr="string:${portal_url}/++resource++plonezoho.remoteeditor/controlpanel_icon.png"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>

</object>
